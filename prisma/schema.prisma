generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id String @id @default(cuid())
  title String
  category String
  content String @db.Text
  author String
  image String
  snippet String @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}